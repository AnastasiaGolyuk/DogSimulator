<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sliderBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cornflower"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageSlider"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="5dp"
        android:layout_weight="3"
        android:contentDescription="@string/dog_image"
        android:src="@drawable/biege_dog" />


    <TextView
        android:id="@+id/titleSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/outfit_bold"
        android:gravity="center"
        android:text="@string/fourth_slide_title"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sliderSubscriptionList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="5dp" />


    <TextView
        android:id="@+id/descriptionSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="190dp"
        android:fontFamily="@font/outfit_bold"
        android:gravity="center"
        android:text="@string/fourth_slide_description"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>